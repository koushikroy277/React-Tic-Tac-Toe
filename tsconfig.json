{
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "noImplicitAny": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error"
  }
}